{
    "name": "appocular/keeper",
    "description": "Appocular Keeper.",
    "keywords": ["testing"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2",
        "fideloper/proxy": "^4.2",
        "laravel/lumen-framework": "^6.0",
        "league/flysystem": "^1.0",
        "symfony/process": "^4.3"
    },
    "require-dev": {
        "bossa/phpspec2-expect": "^3.1",
        "ddelnano/dredd-hooks-php": "^1.1",
        "fzaninotto/faker": "^1.4",
        "drupol/phpspec-code-coverage": "^5.0.1",
        "mockery/mockery": "^1.0",
        "phpspec/phpspec": "^5.1",
        "phpunit/phpcov": "^6.0",
        "phpunit/phpunit": "^8.0",
        "sempro/phpunit-pretty-print": "^1.0"
    },
    "repositories" : [
        {
            "type" : "vcs",
            "url" : "https://github.com/samsonasik/phpspec-code-coverage",
            "no-api": true
        }
    ],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "Appocular\\Keeper\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
