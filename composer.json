{
    "name": "appocular/keeper",
    "description": "Appocular Keeper.",
    "keywords": ["testing"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "laravel/lumen-framework": "5.7.*",
        "league/flysystem": " ~1.0",
        "vlucas/phpdotenv": "~2.2"
    },
    "require-dev": {
        "bossa/phpspec2-expect": "^3.1",
        "ddelnano/dredd-hooks-php": "^1.1",
        "fzaninotto/faker": "~1.4",
        "leanphp/phpspec-code-coverage": "dev-patch-1",
        "mockery/mockery": "~1.0",
        "phpspec/phpspec": "^5.1",
        "phpunit/phpcov": "^5.0",
        "phpunit/phpunit": "~7.0"
    },
    "repositories" : [
        {
            "type" : "vcs",
            "url" : "https://github.com/samsonasik/phpspec-code-coverage",
            "no-api": true
        }
    ],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "Appocular\\Keeper\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
